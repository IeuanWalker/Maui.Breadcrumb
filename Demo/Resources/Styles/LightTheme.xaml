<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="App.Resources.Styles.LightTheme"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    Source="DefaultTheme.xaml">
    <Color x:Key="BackgroundColour">#fff</Color>
    <Color x:Key="Primary">#6200eee</Color>

    <Color x:Key="Text">#000</Color>

    <!-- Production test -->
    <Color x:Key="BreadcrumbBackground">#FCFCFC</Color>
    <Color x:Key="TextAccentColour">#086c6d</Color>
    <Color x:Key="TextSilverColour">#595959</Color>
    <Color x:Key="DividerGradientEndColour">#e4e4e4</Color>

    <!-- Dynamic test -->
    <Color x:Key="DynamicTextColor">White</Color>
    <Color x:Key="DynamicBreadcrumbBackgroundColor">Green</Color>
    <Color x:Key="DynamicLastBreadcrumbTextColor">Yellow</Color>
    <Color x:Key="DynamicLastBreadcrumbBackgroundColor">Black</Color>
</ResourceDictionary>