<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="App.Resources.Styles.DarkTheme"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    Source="DefaultTheme.xaml">
    <Color x:Key="BackgroundColour">#121212</Color>
    <Color x:Key="Primary">#bb86fc</Color>

    <Color x:Key="Text">#fff</Color>

    <!-- Production test -->
    <Color x:Key="BreadcrumbBackground">#37474f</Color>
    <Color x:Key="TextAccentColour">#fff</Color>
    <Color x:Key="TextSilverColour">#eeeeee</Color>
    <Color x:Key="DividerGradientEndColour">#043031</Color>

    <!-- Dynamic test -->
    <Color x:Key="DynamicTextColor">Black</Color>
    <Color x:Key="DynamicBreadcrumbBackgroundColor">Red</Color>
    <Color x:Key="DynamicLastBreadcrumbTextColor">Blue</Color>
    <Color x:Key="DynamicLastBreadcrumbBackgroundColor">LightGray</Color>
</ResourceDictionary>